{
  "manifest_version": 3,
  "name": "My Firefox Extension",
  "version": "1.0",
  "description": "A basic Firefox extension structure.",
  "icons": {
    "48": "icons/icon_48.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "webNavigation",
    "scripting"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.udemy.com/*"],
      "js": [
        "dom.js",
        "storage.js",
        "toast/toast.js",
        "transcript.js",
        "content.js"
      ],
      "css": ["toast/toast.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "48": "icons/icon_48.png"
    }
  }
}
